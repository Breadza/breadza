<UserControl x:Class="UCS.UI.UC.Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UCS.UI.UC"
             mc:Ignorable="d" 
             d:DesignHeight="36" d:DesignWidth="200" FontSize="16">
    <Grid HorizontalAlignment="Left" Name="ACAB">
        <Image x:Name="Icon" Source="/UCS;component/UI/Images/Plugins.png" Grid.Column="0" HorizontalAlignment="Left" Height="36" VerticalAlignment="Top" Width="36" />
        <Label x:Name="l_Name" Grid.Column="1" Content="Name" VerticalAlignment="Center" Margin="36,0,0,0" FontFamily="Segoe UI Light" Foreground="White" FontSize="12"/>
    </Grid>
</UserControl>
